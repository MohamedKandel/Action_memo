<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ActionMemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="android:statusBarColor">@color/my_light_primary</item>
        <item name="colorAccent">@color/my_light_primary</item>

    </style>

    <style name="MAIN_Layout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.MaterialComponents.DayNight" >
        <item name="android:fontFamily">@font/titan_one_regular</item>
        <item name="android:background">@color/my_light_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.ActionMemo" parent="Base.Theme.ActionMemo" />

    <style name="BlackTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderBG">
        <item name="android:background">@drawable/header_drawable</item>
    </style>

    <style name="WhiteBtnStyle">

        <item name="android:textColor">@color/my_light_primary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/my_light_primary</item>
        <item name="strokeWidth">@dimen/_1ssp</item>
        <item name="cornerRadius">@dimen/_7ssp</item>
        <item name="android:paddingStart">@dimen/_18ssp</item>
        <item name="android:paddingEnd">@dimen/_18ssp</item>
        <item name="android:paddingTop">@dimen/_10ssp</item>
        <item name="android:paddingBottom">@dimen/_10ssp</item>
    </style>

    <style name="IMG_Style">
        <item name="civ_border_width">@dimen/_3ssp</item>
        <item name="civ_border_color">@color/my_light_primary</item>
    </style>
    
    <style name="camera_style">
        <item name="tint">@color/my_light_primary</item>
    </style>

    <style name="TransparentButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="nav_style">
        <item name="android:background">@color/my_light_primary</item>
    </style>
    
    <style name="priority_textView">
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="img_style">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>